@model IEnumerable<HireHub.Models.JobPosting>

@{
    ViewData["Title"] = "Browse Jobs";
}

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="display-5 text-center mb-5">Available Jobs</h1>
            </div>
        </div>
        
        @if (Model.Any())
        {
            <div class="row">
                @foreach (var job in Model)
                {
                    <div class="col-lg-6 mb-4">
                        <div class="card job-card card-hover h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <h5 class="card-title text-primary">@job.Title</h5>
                                    <span class="badge bg-success">@job.JobType</span>
                                </div>
                                
                                <div class="mb-3">
                                    <p class="text-muted mb-1">
                                        <i class="fas fa-building me-2"></i>@job.Company
                                    </p>
                                    <p class="text-muted mb-1">
                                        <i class="fas fa-map-marker-alt me-2"></i>@job.Location
                                    </p>
                                    <p class="text-muted mb-1">
                                        <i class="fas fa-briefcase me-2"></i>@job.ExperienceLevel
                                    </p>
                                </div>
                                
                                <p class="card-text text-muted">
                                    @(job.Description.Length > 150 ? job.Description.Substring(0, 150) + "..." : job.Description)
                                </p>
                                
                                @if (job.SalaryMin.HasValue && job.SalaryMax.HasValue)
                                {
                                    <p class="text-success fw-bold mb-3">
                                        <i class="fas fa-dollar-sign me-1"></i>
                                        $@job.SalaryMin.Value.ToString("N0") - $@job.SalaryMax.Value.ToString("N0")
                                    </p>
                                }
                                
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">
                                        <i class="fas fa-clock me-1"></i>
                                        Posted @job.PostedDate.ToString("MMM dd, yyyy")
                                    </small>
                                    <a href="@Url.Action("Details", "Jobs", new { id = job.Id })" class="btn btn-outline-primary">
                                        View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-briefcase text-muted" style="font-size: 4rem;"></i>
                <h4 class="text-muted mt-3">No jobs available at the moment</h4>
                <p class="text-muted">Check back later for new opportunities!</p>
            </div>
        }
    </div>
</section>
