@model IEnumerable<JobApplication>

@{
    ViewData["Title"] = "My Applications";
}

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="display-5 mb-4">My Job Applications</h1>
            </div>
        </div>

        <!-- Success Message -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="row mb-4">
                <div class="col-12">
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-check-circle fa-2x me-3 text-success"></i>
                            <div class="flex-grow-1">
                                <h5 class="alert-heading mb-1">Application Submitted Successfully!</h5>
                                <p class="mb-1">@TempData["SuccessMessage"]</p>
                                @if (TempData["JobTitle"] != null && TempData["CompanyName"] != null)
                                {
                                    <div class="mt-2">
                                        <div class="card bg-light border-0">
                                            <div class="card-body py-2">
                                                <div class="row align-items-center">
                                                    <div class="col-md-8">
                                                        <h6 class="mb-1 text-primary">@TempData["JobTitle"]</h6>
                                                        <p class="mb-0 text-muted">
                                                            <i class="fas fa-building me-1"></i>@TempData["CompanyName"]
                                                        </p>
                                                    </div>
                                                    <div class="col-md-4 text-end">
                                                        <span class="badge bg-success">
                                                            <i class="fas fa-paper-plane me-1"></i>Application Sent
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            </div>
        }
        
        @if (Model.Any())
        {
            <div class="row">
                @foreach (var application in Model)
                {
                    <div class="col-lg-6 mb-4">
                        <div class="card job-card card-hover h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <h5 class="card-title text-primary">@application.JobPosting.Title</h5>
                                    <span class="badge @(application.Status switch {
                                        "Pending" => "bg-warning",
                                        "Reviewed" => "bg-info", 
                                        "Shortlisted" => "bg-success",
                                        "Rejected" => "bg-danger",
                                        "Hired" => "bg-primary",
                                        _ => "bg-secondary"
                                    })">@application.Status</span>
                                </div>
                                
                                <div class="mb-3">
                                    <p class="text-muted mb-1">
                                        <i class="fas fa-building me-2"></i>@application.JobPosting.Company
                                    </p>
                                    <p class="text-muted mb-1">
                                        <i class="fas fa-map-marker-alt me-2"></i>@application.JobPosting.Location
                                    </p>
                                    <p class="text-muted mb-1">
                                        <i class="fas fa-briefcase me-2"></i>@application.JobPosting.JobType
                                    </p>
                                </div>
                                
                                @if (!string.IsNullOrEmpty(application.CoverLetter))
                                {
                                    <p class="card-text text-muted">
                                        @(application.CoverLetter.Length > 100 ? application.CoverLetter.Substring(0, 100) + "..." : application.CoverLetter)
                                    </p>
                                }
                                
                                <div class="row mb-3">
                                    <div class="col-6">
                                        <small class="text-muted">
                                            <i class="fas fa-calendar me-1"></i>
                                            Applied @application.AppliedDate.ToString("MMM dd, yyyy")
                                        </small>
                                    </div>
                                    @if (application.ReviewedDate.HasValue)
                                    {
                                        <div class="col-6 text-end">
                                            <small class="text-muted">
                                                <i class="fas fa-clock me-1"></i>
                                                Reviewed @application.ReviewedDate.Value.ToString("MMM dd, yyyy")
                                            </small>
                                        </div>
                                    }
                                </div>
                                
                                @if (!string.IsNullOrEmpty(application.Notes))
                                {
                                    <div class="alert alert-info">
                                        <small><strong>Employer Notes:</strong> @application.Notes</small>
                                    </div>
                                }
                                
                                <div class="d-flex justify-content-between align-items-center">
                                    <a href="@Url.Action("Details", "Jobs", new { id = application.JobPosting.Id })" class="btn btn-outline-primary btn-sm">
                                        View Job Details
                                    </a>
                                    @if (!string.IsNullOrEmpty(application.ResumePath))
                                    {
                                        <a href="@application.ResumePath" class="btn btn-outline-secondary btn-sm" target="_blank">
                                            <i class="fas fa-file-pdf me-1"></i>View Resume
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-file-alt text-muted" style="font-size: 4rem;"></i>
                <h4 class="text-muted mt-3">No applications yet</h4>
                <p class="text-muted">Start applying to jobs that interest you!</p>
                <a href="@Url.Action("Index", "Jobs")" class="btn btn-primary">
                    <i class="fas fa-search me-2"></i>Browse Jobs
                </a>
            </div>
        }
    </div>
</section>
