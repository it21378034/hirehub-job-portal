@model IEnumerable<JobPosting>

@{
    ViewData["Title"] = "My Job Postings";
}

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h1 class="h2 mb-2">My Job Postings</h1>
                        <p class="text-muted mb-0">Manage your job postings and applications</p>
                    </div>
                    <div class="d-flex gap-2">
                        <a href="@Url.Action("Applications", "Employer")" class="btn btn-success px-3">
                            <i class="fas fa-file-alt me-1"></i>View Applications
                        </a>
                        <a href="@Url.Action("Create", "Jobs")" class="btn btn-primary px-3">
                            <i class="fas fa-plus me-1"></i>Post New Job
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        @if (Model.Any())
        {
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center py-3">
                            <div class="text-primary mb-2">
                                <i class="fas fa-briefcase fa-2x"></i>
                            </div>
                            <h3 class="mb-1">@Model.Count()</h3>
                            <p class="text-muted mb-0 small">Total Jobs</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center py-3">
                            <div class="text-success mb-2">
                                <i class="fas fa-file-alt fa-2x"></i>
                            </div>
                            <h3 class="mb-1">@Model.Sum(j => j.Applications.Count)</h3>
                            <p class="text-muted mb-0 small">Total Applications</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center py-3">
                            <div class="text-warning mb-2">
                                <i class="fas fa-check-circle fa-2x"></i>
                            </div>
                            <h3 class="mb-1">@Model.Count(j => j.IsActive)</h3>
                            <p class="text-muted mb-0 small">Active Jobs</p>
                        </div>
                    </div>
                </div>
            </div>
        }
        
        @if (Model.Any())
        {
            <div class="row">
                @foreach (var job in Model)
                {
                    <div class="col-lg-6 mb-3">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body p-4">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <h5 class="card-title text-primary mb-1">@job.Title</h5>
                                    <div>
                                        @if (job.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </div>
                                </div>
                                
                                <div class="mb-3">
                                    <div class="d-flex align-items-center text-muted mb-2">
                                        <i class="fas fa-building me-2"></i>
                                        <span>@job.Company</span>
                                    </div>
                                    <div class="d-flex align-items-center text-muted mb-2">
                                        <i class="fas fa-map-marker-alt me-2"></i>
                                        <span>@job.Location</span>
                                    </div>
                                    <div class="d-flex align-items-center text-muted">
                                        <i class="fas fa-briefcase me-2"></i>
                                        <span>@job.JobType - @job.ExperienceLevel</span>
                                    </div>
                                </div>
                                
                                <p class="card-text text-muted small mb-3">
                                    @(job.Description.Length > 80 ? job.Description.Substring(0, 80) + "..." : job.Description)
                                </p>
                                
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <small class="text-muted">
                                        <i class="fas fa-clock me-1"></i>
                                        Posted @job.PostedDate.ToString("MMM dd, yyyy")
                                    </small>
                                    <small class="text-muted">
                                        <i class="fas fa-users me-1"></i>
                                        @job.Applications.Count applications
                                    </small>
                                </div>
                                
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="d-flex gap-2">
                                        <a href="@Url.Action("Details", "Jobs", new { id = job.Id })" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye me-1"></i>View
                                        </a>
                                        <a href="@Url.Action("Applications", "Employer")" class="btn btn-outline-success btn-sm">
                                            <i class="fas fa-users me-1"></i>@job.Applications.Count
                                        </a>
                                    </div>
                                    <div class="dropdown">
                                        <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="fas fa-ellipsis-v"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li>
                                                <a class="dropdown-item" href="@Url.Action("Edit", "Jobs", new { id = job.Id })">
                                                    <i class="fas fa-edit me-2"></i>Edit Job
                                                </a>
                                            </li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <form asp-action="Delete" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@job.Id" />
                                                    <button type="submit" class="dropdown-item text-danger" 
                                                            onclick="return confirm('Are you sure you want to delete this job posting?')">
                                                        <i class="fas fa-trash me-2"></i>Delete Job
                                                    </button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <div class="card border-0 bg-light">
                    <div class="card-body py-5">
                        <i class="fas fa-briefcase text-muted mb-4" style="font-size: 4rem;"></i>
                        <h4 class="text-muted mb-3">No job postings yet</h4>
                        <p class="text-muted mb-4">Start by creating your first job posting to attract talented candidates!</p>
                        <div class="d-flex justify-content-center gap-2">
                            <a href="@Url.Action("Create", "Jobs")" class="btn btn-primary px-4">
                                <i class="fas fa-plus me-2"></i>Create Your First Job
                            </a>
                            <a href="@Url.Action("Index", "Jobs")" class="btn btn-outline-secondary px-4">
                                <i class="fas fa-search me-2"></i>Browse Jobs
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
