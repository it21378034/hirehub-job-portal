@{
    ViewData["Title"] = "About Us";
}

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <h1 class="display-4 text-center mb-5">About Job Portal</h1>
                
                <div class="card shadow">
                    <div class="card-body p-5">
                        <h3 class="mb-4">Our Mission</h3>
                        <p class="lead">We are dedicated to connecting talented job seekers with exceptional employers, creating meaningful career opportunities and driving business success.</p>
                        
                        <h3 class="mb-4 mt-5">What We Do</h3>
                        <p>Job Portal is a comprehensive web-based application that streamlines the hiring process for both job seekers and employers. Our platform provides:</p>
                        
                        <div class="row mt-4">
                            <div class="col-md-6">
                                <h5><i class="fas fa-user-tie text-primary me-2"></i>For Job Seekers</h5>
                                <ul class="list-unstyled">
                                    <li><i class="fas fa-check text-success me-2"></i>Create detailed profiles</li>
                                    <li><i class="fas fa-check text-success me-2"></i>Upload and manage resumes</li>
                                    <li><i class="fas fa-check text-success me-2"></i>Search and apply for jobs</li>
                                    <li><i class="fas fa-check text-success me-2"></i>Track application status</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <h5><i class="fas fa-building text-primary me-2"></i>For Employers</h5>
                                <ul class="list-unstyled">
                                    <li><i class="fas fa-check text-success me-2"></i>Post job openings</li>
                                    <li><i class="fas fa-check text-success me-2"></i>Manage job listings</li>
                                    <li><i class="fas fa-check text-success me-2"></i>Review applications</li>
                                    <li><i class="fas fa-check text-success me-2"></i>Find qualified candidates</li>
                                </ul>
                            </div>
                        </div>
                        
                        <h3 class="mb-4 mt-5">Technology</h3>
                        <p>Our platform is built using modern web technologies:</p>
                        <div class="row">
                            <div class="col-md-4 text-center mb-3">
                                <i class="fab fa-microsoft fa-3x text-primary mb-2"></i>
                                <h6>ASP.NET MVC</h6>
                                <small class="text-muted">Robust backend framework</small>
                            </div>
                            <div class="col-md-4 text-center mb-3">
                                <i class="fas fa-database fa-3x text-primary mb-2"></i>
                                <h6>SQLite Database</h6>
                                <small class="text-muted">Lightweight and reliable</small>
                            </div>
                            <div class="col-md-4 text-center mb-3">
                                <i class="fas fa-mobile-alt fa-3x text-primary mb-2"></i>
                                <h6>MDBootstrap</h6>
                                <small class="text-muted">Responsive design</small>
                            </div>
                        </div>
                        
                        <h3 class="mb-4 mt-5">Our Values</h3>
                        <div class="row">
                            <div class="col-md-4 text-center mb-4">
                                <div class="text-primary mb-3">
                                    <i class="fas fa-heart fa-2x"></i>
                                </div>
                                <h6>User-Centric</h6>
                                <p class="small">We prioritize user experience and satisfaction in everything we do.</p>
                            </div>
                            <div class="col-md-4 text-center mb-4">
                                <div class="text-primary mb-3">
                                    <i class="fas fa-lightbulb fa-2x"></i>
                                </div>
                                <h6>Innovation</h6>
                                <p class="small">We continuously improve our platform with cutting-edge technology.</p>
                            </div>
                            <div class="col-md-4 text-center mb-4">
                                <div class="text-primary mb-3">
                                    <i class="fas fa-handshake fa-2x"></i>
                                </div>
                                <h6>Trust & Security</h6>
                                <p class="small">We maintain the highest standards of data protection and security.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
