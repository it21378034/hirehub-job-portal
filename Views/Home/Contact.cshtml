@{
    ViewData["Title"] = "Contact Us";
}

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <h1 class="display-4 text-center mb-5">Contact Us</h1>
                
                <div class="row">
                    <div class="col-lg-6">
                        <div class="card shadow">
                            <div class="card-body p-4">
                                <h3 class="mb-4">Get in Touch</h3>
                                <p class="text-muted mb-4">Have questions or need assistance? We're here to help!</p>
                                
                                <div class="mb-3">
                                    <h6><i class="fas fa-envelope text-primary me-2"></i>Email</h6>
                                    <p class="text-muted">info@jobportal.com</p>
                                </div>
                                
                                <div class="mb-3">
                                    <h6><i class="fas fa-phone text-primary me-2"></i>Phone</h6>
                                    <p class="text-muted">+1 (555) 123-4567</p>
                                </div>
                                
                                <div class="mb-3">
                                    <h6><i class="fas fa-map-marker-alt text-primary me-2"></i>Address</h6>
                                    <p class="text-muted">123 Business Street<br>Suite 100<br>New York, NY 10001</p>
                                </div>
                                
                                <div class="mb-3">
                                    <h6><i class="fas fa-clock text-primary me-2"></i>Business Hours</h6>
                                    <p class="text-muted">Monday - Friday: 9:00 AM - 6:00 PM<br>Saturday: 10:00 AM - 4:00 PM<br>Sunday: Closed</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-lg-6">
                        <div class="card shadow">
                            <div class="card-body p-4">
                                <h3 class="mb-4">Send us a Message</h3>
                                <form>
                                    <div class="mb-3">
                                        <label for="name" class="form-label">Name</label>
                                        <input type="text" class="form-control" id="name" required>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label for="email" class="form-label">Email</label>
                                        <input type="email" class="form-control" id="email" required>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label for="subject" class="form-label">Subject</label>
                                        <input type="text" class="form-control" id="subject" required>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label for="message" class="form-label">Message</label>
                                        <textarea class="form-control" id="message" rows="4" required></textarea>
                                    </div>
                                    
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-paper-plane me-2"></i>Send Message
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="row mt-5">
                    <div class="col-12">
                        <div class="card shadow">
                            <div class="card-body p-4">
                                <h3 class="text-center mb-4">Frequently Asked Questions</h3>
                                
                                <div class="accordion" id="faqAccordion">
                                    <div class="accordion-item">
                                        <h2 class="accordion-header">
                                            <button class="accordion-button" type="button" data-mdb-toggle="collapse" data-mdb-target="#faq1">
                                                How do I create an account?
                                            </button>
                                        </h2>
                                        <div id="faq1" class="accordion-collapse collapse show" data-mdb-parent="#faqAccordion">
                                            <div class="accordion-body">
                                                Click on the "Register" button in the top navigation, fill out the registration form, and choose whether you're a job seeker or employer.
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="accordion-item">
                                        <h2 class="accordion-header">
                                            <button class="accordion-button collapsed" type="button" data-mdb-toggle="collapse" data-mdb-target="#faq2">
                                                How do I apply for a job?
                                            </button>
                                        </h2>
                                        <div id="faq2" class="accordion-collapse collapse" data-mdb-parent="#faqAccordion">
                                            <div class="accordion-body">
                                                Browse available jobs, click on a job that interests you, review the details, and click the "Apply" button to submit your application.
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="accordion-item">
                                        <h2 class="accordion-header">
                                            <button class="accordion-button collapsed" type="button" data-mdb-toggle="collapse" data-mdb-target="#faq3">
                                                How do I post a job as an employer?
                                            </button>
                                        </h2>
                                        <div id="faq3" class="accordion-collapse collapse" data-mdb-parent="#faqAccordion">
                                            <div class="accordion-body">
                                                After registering as an employer, go to "My Jobs" in your dashboard and click "Create New Job" to post a job opening.
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="accordion-item">
                                        <h2 class="accordion-header">
                                            <button class="accordion-button collapsed" type="button" data-mdb-toggle="collapse" data-mdb-target="#faq4">
                                                Is my personal information secure?
                                            </button>
                                        </h2>
                                        <div id="faq4" class="accordion-collapse collapse" data-mdb-parent="#faqAccordion">
                                            <div class="accordion-body">
                                                Yes, we use enterprise-grade security measures to protect your personal information and ensure your data is safe.
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
