@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<div class="hero-section bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Find Your Dream Job Today</h1>
                <p class="lead mb-4">Connect with top employers and discover amazing career opportunities. Join thousands of job seekers who found their perfect match on HireHub.</p>
                <div class="d-flex gap-3">
                    <a href="/Account/Register" class="btn btn-light btn-lg px-4">Get Started</a>
                    <a href="/Jobs" class="btn btn-outline-light btn-lg px-4">Browse Jobs</a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <i class="fas fa-briefcase" style="font-size: 8rem; opacity: 0.3;"></i>
            </div>
        </div>
    </div>
</div>

<!-- Search Section -->
<div class="search-section py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h2 class="text-center mb-4">Search for Jobs</h2>
                <form action="/Search/Jobs" method="get" class="row g-3">
                    <div class="col-md-4">
                        <input type="text" class="form-control form-control-lg" name="keyword" placeholder="Job title or keywords">
                    </div>
                    <div class="col-md-4">
                        <input type="text" class="form-control form-control-lg" name="location" placeholder="City or location">
                    </div>
                    <div class="col-md-4">
                        <select class="form-select form-select-lg" name="jobType">
                            <option value="">All Types</option>
                            <option value="Full-time">Full-time</option>
                            <option value="Part-time">Part-time</option>
                            <option value="Contract">Contract</option>
                            <option value="Remote">Remote</option>
                        </select>
                    </div>
                    <div class="col-12 text-center">
                        <button type="submit" class="btn btn-primary btn-lg px-5">Search Jobs</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="features-section py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="display-5 fw-bold">Why Choose HireHub?</h2>
                <p class="lead text-muted">We make job searching and hiring simple and effective</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-search fa-lg"></i>
                        </div>
                        <h5 class="card-title">Smart Search</h5>
                        <p class="card-text">Find relevant jobs with our advanced search filters and AI-powered matching system.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-users fa-lg"></i>
                        </div>
                        <h5 class="card-title">Top Employers</h5>
                        <p class="card-text">Connect with leading companies and startups looking for talented professionals like you.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-info text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-chart-line fa-lg"></i>
                        </div>
                        <h5 class="card-title">Track Progress</h5>
                        <p class="card-text">Monitor your applications and get real-time updates on your job search progress.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Jobs Section -->
@if (ViewBag.RecentJobs != null && ((List<HireHub.Models.JobPosting>)ViewBag.RecentJobs).Any())
{
    <div class="recent-jobs-section py-5">
        <div class="container">
            <div class="row mb-5">
                <div class="col-12 text-center">
                    <h2 class="display-5 fw-bold">Latest Job Opportunities</h2>
                    <p class="lead text-muted">Discover the newest job postings from top companies</p>
                </div>
            </div>
            <div class="row g-4">
                @foreach (var job in (List<HireHub.Models.JobPosting>)ViewBag.RecentJobs)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <h5 class="card-title text-primary">@job.Title</h5>
                                    <span class="badge bg-success">@job.JobType</span>
                                </div>
                                <p class="text-muted mb-2">
                                    <i class="fas fa-building me-2"></i>@job.Company
                                </p>
                                <p class="text-muted mb-2">
                                    <i class="fas fa-map-marker-alt me-2"></i>@job.Location
                                </p>
                                @if (job.SalaryMin > 0)
                                {
                                    <p class="text-muted mb-3">
                                        <i class="fas fa-dollar-sign me-2"></i>$@job.SalaryMin.Value.ToString("N0") - $@job.SalaryMax.Value.ToString("N0") @job.SalaryCurrency
                                    </p>
                                }
                                <p class="card-text text-truncate">@job.Description</p>
                                <div class="d-flex justify-content-between align-items-center mt-auto">
                                    <small class="text-muted">Posted @job.PostedDate.ToString("MMM dd, yyyy")</small>
                                    <a href="/Jobs/Details/@job.Id" class="btn btn-outline-primary btn-sm">View Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="row mt-4">
                <div class="col-12 text-center">
                    <a href="/Jobs" class="btn btn-primary btn-lg px-5">View All Jobs</a>
                </div>
            </div>
        </div>
    </div>
}

<!-- CTA Section -->
<div class="cta-section bg-primary text-white py-5">
    <div class="container text-center">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h2 class="display-5 fw-bold mb-4">Ready to Start Your Career Journey?</h2>
                <p class="lead mb-4">Join thousands of professionals who found their dream jobs through HireHub</p>
                <div class="d-flex gap-3 justify-content-center">
                    <a href="/Account/Register" class="btn btn-light btn-lg px-5">Create Account</a>
                    <a href="/Account/Login" class="btn btn-outline-light btn-lg px-5">Sign In</a>
                </div>
            </div>
        </div>
    </div>
</div>