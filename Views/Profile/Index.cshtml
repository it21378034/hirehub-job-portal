<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-close modals on page load if there are success/error messages
    @if (TempData["ProfileUpdateSuccess"] != null || TempData["ErrorMessage"] != null)
    {
        <text>
        // Close any open modals
        const modals = document.querySelectorAll('.modal');
        modals.forEach(function(modal) {
            const modalInstance = bootstrap.Modal.getInstance(modal);
            if (modalInstance) {
                modalInstance.hide();
            }
        });
        </text>
    }

    // Resume upload validation
    const resumeForm = document.getElementById('resumeUploadForm');
    const resumeFileInput = document.getElementById('resumeFileInput');
    const uploadBtn = document.getElementById('uploadResumeBtn');
    
    if (resumeForm && resumeFileInput && uploadBtn) {
        resumeForm.addEventListener('submit', function(e) {
            const file = resumeFileInput.files[0];
            
            // Check if file is selected
            if (!file) {
                e.preventDefault();
                alert('Please select a file to upload.');
                return false;
            }
            
            // Check file type
            const allowedTypes = ['.pdf', '.doc', '.docx'];
            const fileExtension = '.' + file.name.split('.').pop().toLowerCase();
            if (!allowedTypes.includes(fileExtension)) {
                e.preventDefault();
                alert('Please upload a PDF, DOC, or DOCX file.');
                return false;
            }
            
            // Check file size (10MB = 10 * 1024 * 1024 bytes)
            if (file.size > 10 * 1024 * 1024) {
                e.preventDefault();
                alert('File size must be less than 10MB.');
                return false;
            }
            
            // Show upload progress
            uploadBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Uploading...';
            uploadBtn.disabled = true;
        });
        
        // Show file name when selected
        resumeFileInput.addEventListener('change', function() {
            const file = this.files[0];
            const helpText = this.parentElement.querySelector('.form-text');
            
            if (file) {
                const fileName = file.name;
                const fileSize = (file.size / 1024 / 1024).toFixed(2);
                
                // Update help text to show selected file
                helpText.innerHTML = `
                    <i class="fas fa-check-circle me-1 text-success"></i>
                    Selected: <strong>${fileName}</strong> (${fileSize} MB)
                `;
                helpText.className = 'form-text text-success';
            } else {
                // Reset to original help text
                helpText.innerHTML = `
                    <i class="fas fa-info-circle me-1"></i>
                    Supported formats: PDF, DOC, DOCX (Maximum size: 10MB)
                `;
                helpText.className = 'form-text text-muted';
            }
        });
    }
    
    // Handle profile form submission
    const profileForm = document.querySelector('form[asp-action="UpdateProfile"]');
    if (profileForm) {
        profileForm.addEventListener('submit', function(e) {
            const submitBtn = profileForm.querySelector('button[type="submit"]');
            if (submitBtn) {
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Updating Profile...';
                submitBtn.disabled = true;
            }
        });
    }
});
</script>

