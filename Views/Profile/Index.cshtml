@model UserProfile

@{
    ViewData["Title"] = "My Profile";
    var user = ViewBag.User as ApplicationUser;
}

<!-- Profile Update Success Message -->
@if (TempData["ProfileUpdateSuccess"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <div class="d-flex align-items-center">
            <i class="fas fa-check-circle fa-2x me-3 text-success"></i>
            <div class="flex-grow-1">
                <h6 class="alert-heading mb-1">Profile Updated Successfully!</h6>
                <p class="mb-0">@TempData["ProfileUpdateSuccess"]</p>
            </div>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Error Message -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <div class="d-flex align-items-center">
            <i class="fas fa-exclamation-triangle fa-2x me-3 text-danger"></i>
            <div class="flex-grow-1">
                <h6 class="alert-heading mb-1">Update Failed</h6>
                <p class="mb-0">@TempData["ErrorMessage"]</p>
            </div>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="display-5 mb-4">My Profile</h1>
            </div>
        </div>

        <div class="row @(User.IsInRole("Admin") || User.IsInRole("Employer") ? "justify-content-center" : "")">
            @if (!User.IsInRole("Admin") && !User.IsInRole("Employer"))
            {
                <!-- Profile Information -->
                <div class="col-lg-8">
                    <div class="card shadow mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="fas fa-user me-2"></i>Profile Information</h5>
                            <p class="mb-0 small opacity-75">Update your personal and professional details</p>
                        </div>
                        <div class="card-body p-4">
                            <form asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
                                
                                <!-- Personal Information Section -->
                                <div class="mb-4">
                                    <h6 class="text-primary fw-bold mb-3">
                                        <i class="fas fa-id-card me-2"></i>Personal Information
                                    </h6>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label asp-for="Bio" class="form-label fw-bold">
                                                    <i class="fas fa-quote-left me-1 text-muted"></i>Bio
                                                </label>
                                                <textarea asp-for="Bio" class="form-control" rows="3" 
                                                          placeholder="Tell us about yourself, your interests, and what drives you professionally..."></textarea>
                                                <div class="form-text">A brief description of yourself (optional)</div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label asp-for="Location" class="form-label fw-bold">
                                                    <i class="fas fa-map-marker-alt me-1 text-muted"></i>Location
                                                </label>
                                                <input asp-for="Location" class="form-control" 
                                                       placeholder="e.g., New York, NY or Remote" />
                                                <div class="form-text">Your current location</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Professional Information Section -->
                                <div class="mb-4">
                                    <h6 class="text-primary fw-bold mb-3">
                                        <i class="fas fa-briefcase me-2"></i>Professional Information
                                    </h6>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label asp-for="CurrentPosition" class="form-label fw-bold">
                                                    <i class="fas fa-user-tie me-1 text-muted"></i>Current Position
                                                </label>
                                                <input asp-for="CurrentPosition" class="form-control" 
                                                       placeholder="e.g., Software Engineer, Marketing Manager" />
                                                <div class="form-text">Your current job title</div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label asp-for="CurrentCompany" class="form-label fw-bold">
                                                    <i class="fas fa-building me-1 text-muted"></i>Current Company
                                                </label>
                                                <input asp-for="CurrentCompany" class="form-control" 
                                                       placeholder="e.g., Google, Microsoft, ABC Corp" />
                                                <div class="form-text">Your current employer</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Contact Information Section -->
                                <div class="mb-4">
                                    <h6 class="text-primary fw-bold mb-3">
                                        <i class="fas fa-phone me-2"></i>Contact Information
                                    </h6>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label asp-for="PhoneNumber" class="form-label fw-bold">
                                                    <i class="fas fa-phone me-1 text-muted"></i>Phone Number
                                                </label>
                                                <input asp-for="PhoneNumber" class="form-control" 
                                                       placeholder="e.g., +1 (555) 123-4567" />
                                                <div class="form-text">Your contact number (optional)</div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label asp-for="Website" class="form-label fw-bold">
                                                    <i class="fas fa-globe me-1 text-muted"></i>Website
                                                </label>
                                                <input asp-for="Website" class="form-control" 
                                                       placeholder="e.g., https://yourwebsite.com" />
                                                <div class="form-text">Your personal or professional website</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Social Media Section -->
                                <div class="mb-4">
                                    <h6 class="text-primary fw-bold mb-3">
                                        <i class="fas fa-share-alt me-2"></i>Social Media & Professional Links
                                    </h6>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label asp-for="LinkedInProfile" class="form-label fw-bold">
                                                    <i class="fab fa-linkedin me-1 text-primary"></i>LinkedIn Profile
                                                </label>
                                                <input asp-for="LinkedInProfile" class="form-control" 
                                                       placeholder="e.g., https://linkedin.com/in/yourname" />
                                                <div class="form-text">Your LinkedIn profile URL</div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="mb-3">
                                                <label asp-for="GitHubProfile" class="form-label fw-bold">
                                                    <i class="fab fa-github me-1 text-dark"></i>GitHub Profile
                                                </label>
                                                <input asp-for="GitHubProfile" class="form-control" 
                                                       placeholder="e.g., https://github.com/yourusername" />
                                                <div class="form-text">Your GitHub profile URL</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Action Buttons -->
                                <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                                    <div class="text-muted small">
                                        <i class="fas fa-info-circle me-1"></i>
                                        All fields are optional. Fill in what you're comfortable sharing.
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="fas fa-save me-2"></i>Update Profile
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Resume Upload -->
                    <div class="card shadow mb-4">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0"><i class="fas fa-file-alt me-2"></i>Resume</h5>
                            <p class="mb-0 small opacity-75">Upload your professional resume</p>
                        </div>
                        <div class="card-body p-4">
                            @if (!string.IsNullOrEmpty(Model.ResumePath))
                            {
                                <div class="alert alert-success d-flex align-items-center mb-4">
                                    <i class="fas fa-check-circle fa-2x me-3 text-success"></i>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1 text-success">Resume Uploaded Successfully!</h6>
                                        <p class="mb-1"><strong>File:</strong> @Model.ResumeFileName</p>
                                        <small class="text-muted">Last updated: @Model.UpdatedAt.ToString("MMM dd, yyyy 'at' h:mm tt")</small>
                                    </div>
                                    <a href="@Model.ResumePath" target="_blank" class="btn btn-outline-success">
                                        <i class="fas fa-download me-1"></i>Download
                                    </a>
                                </div>
                            }
                            
                            @if (TempData["ResumeUploadSuccess"] != null)
                            {
                                <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-check-circle fa-2x me-3 text-success"></i>
                                        <div class="flex-grow-1">
                                            <h6 class="alert-heading mb-1">Resume Uploaded Successfully!</h6>
                                            <p class="mb-0">@TempData["ResumeUploadSuccess"]</p>
                                        </div>
                                    </div>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-4 mb-4">
                                    <i class="fas fa-file-upload fa-3x text-muted mb-3"></i>
                                    <h6 class="text-muted">No Resume Uploaded</h6>
                                    <p class="text-muted small">Upload your resume to make your profile more attractive to employers</p>
                                </div>
                            }

                            <form asp-action="UploadResume" method="post" enctype="multipart/form-data" id="resumeUploadForm">
                                <div class="mb-4">
                                    <label for="resumeFileInput" class="form-label fw-bold">
                                        <i class="fas fa-file-upload me-2"></i>Choose Resume File
                                    </label>
                                    <input type="file" name="resumeFile" id="resumeFileInput" class="form-control" accept=".pdf,.doc,.docx" required />
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        <strong>Supported formats:</strong> PDF, DOC, DOCX | <strong>Maximum size:</strong> 10MB
                                    </div>
                                </div>
                                
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="text-muted small">
                                        <i class="fas fa-lightbulb me-1"></i>
                                        <strong>Tip:</strong> Use a clear, professional filename like "John_Doe_Resume.pdf"
                                    </div>
                                    <button type="submit" class="btn btn-success btn-lg" id="uploadResumeBtn">
                                        <i class="fas fa-upload me-2"></i>Upload Resume
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Skills -->
                    <div class="card shadow mb-4">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0"><i class="fas fa-cogs me-2"></i>Skills</h5>
                            <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#addSkillModal">
                                <i class="fas fa-plus me-1"></i>Add Skill
                            </button>
                        </div>
                        <div class="card-body">
                            @if (Model.Skills.Any())
                            {
                                @foreach (var skill in Model.Skills)
                                {
                                    <div class="card mb-3">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div>
                                                    <h6 class="mb-1 fw-bold">@skill.SkillName</h6>
                                                    @if (!string.IsNullOrEmpty(skill.ProficiencyLevel))
                                                    {
                                                        <span class="badge bg-primary me-2">@skill.ProficiencyLevel</span>
                                                    }
                                                    @if (!string.IsNullOrEmpty(skill.Description))
                                                    {
                                                        <p class="text-muted small mb-0 mt-2">@skill.Description</p>
                                                    }
                                                </div>
                                                <form asp-action="DeleteSkill" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@skill.Id" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                            onclick="return confirm('Are you sure you want to delete this skill?')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-muted">No skills added yet.</p>
                            }
                        </div>
                    </div>

                    <!-- Education -->
                    <div class="card shadow mb-4">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0"><i class="fas fa-graduation-cap me-2"></i>Education</h5>
                            <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#addEducationModal">
                                <i class="fas fa-plus me-1"></i>Add Education
                            </button>
                        </div>
                        <div class="card-body">
                            @if (Model.Education.Any())
                            {
                                @foreach (var education in Model.Education)
                                {
                                    <div class="card mb-3">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div>
                                                    <h6 class="mb-1">@education.Degree</h6>
                                                    <p class="text-muted mb-1">@education.Institution</p>
                                                    @if (!string.IsNullOrEmpty(education.FieldOfStudy))
                                                    {
                                                        <p class="text-muted mb-1">@education.FieldOfStudy</p>
                                                    }
                                                    <p class="text-muted small">
                                                        @education.StartDate?.ToString("MMM yyyy") - 
                                                        @(education.IsCurrentlyStudying ? "Present" : education.EndDate?.ToString("MMM yyyy"))
                                                    </p>
                                                    @if (!string.IsNullOrEmpty(education.Description))
                                                    {
                                                        <p class="text-muted small">@education.Description</p>
                                                    }
                                                </div>
                                                <form asp-action="DeleteEducation" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@education.Id" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                            onclick="return confirm('Are you sure you want to delete this education?')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-muted">No education added yet.</p>
                            }
                        </div>
                    </div>

                    <!-- Experience -->
                    <div class="card shadow mb-4">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0"><i class="fas fa-briefcase me-2"></i>Work Experience</h5>
                            <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#addExperienceModal">
                                <i class="fas fa-plus me-1"></i>Add Experience
                            </button>
                        </div>
                        <div class="card-body">
                            @if (Model.Experience.Any())
                            {
                                @foreach (var experience in Model.Experience)
                                {
                                    <div class="card mb-3">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div>
                                                    <h6 class="mb-1">@experience.JobTitle</h6>
                                                    <p class="text-muted mb-1">@experience.Company</p>
                                                    @if (!string.IsNullOrEmpty(experience.Location))
                                                    {
                                                        <p class="text-muted mb-1">@experience.Location</p>
                                                    }
                                                    <p class="text-muted small">
                                                        @experience.StartDate.ToString("MMM yyyy") - 
                                                        @(experience.IsCurrentlyWorking ? "Present" : experience.EndDate?.ToString("MMM yyyy"))
                                                    </p>
                                                    @if (!string.IsNullOrEmpty(experience.Description))
                                                    {
                                                        <p class="text-muted small">@experience.Description</p>
                                                    }
                                                    @if (!string.IsNullOrEmpty(experience.Achievements))
                                                    {
                                                        <p class="text-muted small"><strong>Achievements:</strong> @experience.Achievements</p>
                                                    }
                                                </div>
                                                <form asp-action="DeleteExperience" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@experience.Id" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                            onclick="return confirm('Are you sure you want to delete this experience?')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-muted">No experience added yet.</p>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Sidebar -->
            <div class="@(User.IsInRole("Admin") || User.IsInRole("Employer") ? "col-lg-6 col-md-8" : "col-lg-4")">
                <div class="card shadow">
                    <div class="card-body text-center">
                        <div class="avatar-lg mx-auto mb-3">
                            <div class="avatar-title bg-primary text-white rounded-circle">
                                <i class="fas fa-user fa-2x"></i>
                            </div>
                        </div>
                        <h5>@user?.FirstName @user?.LastName</h5>
                        <p class="text-muted">@user?.Email</p>
                        <p class="text-muted small">Member since @user?.CreatedAt.ToString("MMM yyyy")</p>
                        
                        <!-- Debug: Show user roles -->
                        @if (ViewBag.UserRoles != null)
                        {
                            <div class="alert alert-info small">
                                <strong>Roles:</strong> @string.Join(", ", ViewBag.UserRoles)
                            </div>
                        }
                        
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("Index", "Jobs")" class="btn btn-outline-primary">
                                <i class="fas fa-search me-2"></i>Browse Jobs
                            </a>
                            @if (User.IsInRole("JobSeeker"))
                            {
                                <a href="@Url.Action("MyApplications", "Jobs")" class="btn btn-outline-success">
                                    <i class="fas fa-file-alt me-2"></i>My Applications
                                </a>
                            }
                            @if (User.IsInRole("Employer"))
                            {
                                <a href="@Url.Action("MyJobs", "Jobs")" class="btn btn-outline-warning">
                                    <i class="fas fa-briefcase me-2"></i>My Jobs
                                </a>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-outline-danger">
                                    <i class="fas fa-cog me-2"></i>Admin Dashboard
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@if (!User.IsInRole("Admin") && !User.IsInRole("Employer"))
{
    <!-- Add Skill Modal -->
    <div class="modal fade" id="addSkillModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Skill</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-action="AddSkill" method="post">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Skill Name</label>
                            <input name="skillName" class="form-control" required placeholder="e.g., JavaScript, Python, Project Management" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Proficiency Level</label>
                            <select name="proficiencyLevel" class="form-select">
                                <option value="">Select Proficiency Level</option>
                                <option value="Beginner">Beginner</option>
                                <option value="Intermediate">Intermediate</option>
                                <option value="Advanced">Advanced</option>
                                <option value="Expert">Expert</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Description (Optional)</label>
                            <textarea name="description" class="form-control" rows="3" placeholder="Describe your experience with this skill..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Add Skill</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Add Education Modal -->
    <div class="modal fade" id="addEducationModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Education</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-action="AddEducation" method="post">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Institution</label>
                            <input name="institution" class="form-control" required placeholder="e.g., Harvard University, MIT" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Degree</label>
                            <input name="degree" class="form-control" required placeholder="e.g., Bachelor of Science, Master of Arts" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Field of Study (Optional)</label>
                            <input name="fieldOfStudy" class="form-control" placeholder="e.g., Computer Science, Business Administration" />
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Start Date</label>
                                    <input name="startDate" type="date" class="form-control" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">End Date</label>
                                    <input name="endDate" type="date" class="form-control" />
                                    <small class="form-text text-muted">Leave blank if currently studying</small>
                                </div>
                            </div>
                        </div>
                        <div class="form-check mb-3">
                            <input name="isCurrentlyStudying" type="checkbox" class="form-check-input" />
                            <label class="form-check-label">Currently Studying</label>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Description (Optional)</label>
                            <textarea name="description" class="form-control" rows="3" placeholder="Describe your academic achievements, coursework, etc..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Add Education</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Add Experience Modal -->
    <div class="modal fade" id="addExperienceModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Work Experience</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-action="AddExperience" method="post">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Job Title</label>
                            <input name="jobTitle" class="form-control" required placeholder="e.g., Software Engineer, Marketing Manager" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Company</label>
                            <input name="company" class="form-control" required placeholder="e.g., Google, Microsoft, Apple" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Location (Optional)</label>
                            <input name="location" class="form-control" placeholder="e.g., San Francisco, CA" />
                        </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Start Date</label>
