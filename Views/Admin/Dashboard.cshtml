@model HireHub.Models.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="display-5 mb-4">Admin Dashboard</h1>
                <div class="d-flex gap-2 mb-4">
                    <a href="@Url.Action("Users", "Admin")" class="btn btn-outline-primary">
                        <i class="fas fa-users me-2"></i>Manage Users
                    </a>
                    <a href="@Url.Action("Jobs", "Admin")" class="btn btn-outline-success">
                        <i class="fas fa-briefcase me-2"></i>Manage Jobs
                    </a>
                    <a href="@Url.Action("Applications", "Admin")" class="btn btn-outline-info">
                        <i class="fas fa-file-alt me-2"></i>Applications
                    </a>
                    <a href="@Url.Action("Reports", "Admin")" class="btn btn-outline-warning">
                        <i class="fas fa-chart-bar me-2"></i>Reports
                    </a>
                    <a href="@Url.Action("Categories", "Admin")" class="btn btn-outline-secondary">
                        <i class="fas fa-tags me-2"></i>Categories
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Statistics Cards -->
        <div class="row mb-5">
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 class="card-title">@Model.TotalUsers</h4>
                                <p class="card-text">Total Users</p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-users fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 class="card-title">@Model.TotalJobs</h4>
                                <p class="card-text">Total Jobs</p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-briefcase fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 class="card-title">@Model.TotalApplications</h4>
                                <p class="card-text">Total Applications</p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-file-alt fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="card bg-warning text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 class="card-title">@Model.ActiveJobs</h4>
                                <p class="card-text">Active Jobs</p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-check-circle fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Quick Actions -->
        <div class="row mb-5">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Quick Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <a href="@Url.Action("Users", "Admin")" class="btn btn-outline-primary w-100">
                                    <i class="fas fa-users me-2"></i>Manage Users
                                </a>
                            </div>
                            <div class="col-md-3 mb-3">
                                <a href="@Url.Action("Jobs", "Admin")" class="btn btn-outline-success w-100">
                                    <i class="fas fa-briefcase me-2"></i>Manage Jobs
                                </a>
                            </div>
                            <div class="col-md-3 mb-3">
                                <a href="@Url.Action("Applications", "Admin")" class="btn btn-outline-info w-100">
                                    <i class="fas fa-file-alt me-2"></i>View Applications
                                </a>
                            </div>
                            <div class="col-md-3 mb-3">
                                <a href="@Url.Action("Index", "Jobs")" class="btn btn-outline-secondary w-100">
                                    <i class="fas fa-eye me-2"></i>View Site
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Recent Activity -->
        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Recent Job Postings</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.RecentJobs.Any())
                        {
                            @foreach (var job in Model.RecentJobs)
                            {
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div>
                                        <h6 class="mb-1">@job.Title</h6>
                                        <small class="text-muted">@job.Company - @job.Location</small>
                                    </div>
                                    <small class="text-muted">@job.PostedDate.ToString("MMM dd")</small>
                                </div>
                                <hr>
                            }
                        }
                        else
                        {
                            <p class="text-muted">No recent job postings.</p>
                        }
                    </div>
                </div>
            </div>
            
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Recent Applications</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.RecentApplications.Any())
                        {
                            @foreach (var application in Model.RecentApplications)
                            {
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div>
                                        <h6 class="mb-1">@application.JobSeeker.FirstName @application.JobSeeker.LastName</h6>
                                        <small class="text-muted">Applied for @application.JobPosting.Title</small>
                                    </div>
                                    <span class="badge @(application.Status switch {
                                        "Pending" => "bg-warning",
                                        "Reviewed" => "bg-info", 
                                        "Shortlisted" => "bg-success",
                                        "Rejected" => "bg-danger",
                                        "Hired" => "bg-primary",
                                        _ => "bg-secondary"
                                    })">@application.Status</span>
                                </div>
                                <hr>
                            }
                        }
                        else
                        {
                            <p class="text-muted">No recent applications.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
