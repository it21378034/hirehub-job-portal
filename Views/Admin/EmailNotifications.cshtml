@model IEnumerable<JobApplication>

@{
    ViewData["Title"] = "Email Notifications Management";
    var stats = ViewBag.EmailStats as dynamic;
}

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="display-5 mb-4">Email Notifications Management</h1>
                <p class="text-muted">Monitor and manage email notifications for job applications</p>
            </div>
        </div>

        <!-- Email Statistics -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 class="mb-0">@stats.TotalApplications</h4>
                                <p class="mb-0">Total Applications</p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-file-alt fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 class="mb-0">@stats.PendingApplications</h4>
                                <p class="mb-0">Pending</p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-clock fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 class="mb-0">@stats.ShortlistedApplications</h4>
                                <p class="mb-0">Shortlisted</p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-check-circle fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-danger text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 class="mb-0">@stats.RejectedApplications</h4>
                                <p class="mb-0">Rejected</p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-times-circle fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Today's Activity</h5>
                        <p class="card-text">
                            <strong>@stats.ApplicationsToday</strong> new applications today
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">This Week</h5>
                        <p class="card-text">
                            <strong>@stats.ApplicationsThisWeek</strong> applications this week
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Email Management Actions -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Email Management Tools</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <a href="@Url.Action("EmailSettings")" class="btn btn-primary mb-2">
                                    <i class="fas fa-cog me-1"></i>Email Settings & Test
                                </a>
                                <p class="text-muted small">Configure email settings and send test emails</p>
                            </div>
                            <div class="col-md-6">
                                <button type="button" class="btn btn-info mb-2" data-bs-toggle="modal" data-bs-target="#bulkEmailModal">
                                    <i class="fas fa-envelope-open-text me-1"></i>Send Bulk Emails
                                </button>
                                <p class="text-muted small">Send bulk emails to selected applications</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Applications Table -->
        @if (Model.Any())
        {
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">All Job Applications</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover" id="applicationsTable">
                            <thead>
                                <tr>
                                    <th>
                                        <input type="checkbox" id="selectAll" class="form-check-input">
                                    </th>
                                    <th>Applicant</th>
                                    <th>Job Position</th>
                                    <th>Company</th>
                                    <th>Applied Date</th>
                                    <th>Status</th>
                                    <th>Email Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var application in Model)
                                {
                                    <tr>
                                        <td>
                                            <input type="checkbox" name="selectedApplications" value="@application.Id" class="form-check-input application-checkbox">
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                                    @application.JobSeeker.FirstName[0]@application.JobSeeker.LastName[0]
                                                </div>
                                                <div>
                                                    <h6 class="mb-0">@application.JobSeeker.FirstName @application.JobSeeker.LastName</h6>
                                                    <small class="text-muted">@application.JobSeeker.Email</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <h6 class="mb-0">@application.JobPosting.Title</h6>
                                            <small class="text-muted">@application.JobPosting.Location</small>
                                        </td>
                                        <td>@application.JobPosting.Company</td>
                                        <td>@application.AppliedDate.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            @switch (application.Status)
                                            {
                                                case "Pending":
                                                    <span class="badge bg-warning">@application.Status</span>
                                                    break;
                                                case "Shortlisted":
                                                    <span class="badge bg-success">@application.Status</span>
                                                    break;
                                                case "Rejected":
                                                    <span class="badge bg-danger">@application.Status</span>
                                                    break;
                                                case "Hired":
                                                    <span class="badge bg-primary">@application.Status</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary">@application.Status</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            @if (application.Status == "Pending")
                                            {
                                                <span class="badge bg-info">Confirmation Sent</span>
                                            }
                                            else if (application.Status == "Shortlisted")
                                            {
                                                <span class="badge bg-success">Shortlist Sent</span>
                                            }
                                            else if (application.Status == "Rejected")
                                            {
                                                <span class="badge bg-danger">Rejection Sent</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">No Email</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="@Url.Action("ApplicationDetails", "Employer", new { id = application.Id })" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye me-1"></i>View
                                                </a>
                                                @if (!string.IsNullOrEmpty(application.ResumePath))
                                                {
                                                    <a href="@Url.Action("DownloadResume", "Employer", new { id = application.Id })" 
                                                       class="btn btn-sm btn-outline-success">
                                                        <i class="fas fa-download me-1"></i>Resume
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">No Applications Yet</h4>
                <p class="text-muted">Job applications will appear here when users start applying.</p>
            </div>
        }
    </div>
</section>

<!-- Bulk Email Modal -->
<div class="modal fade" id="bulkEmailModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Send Bulk Emails</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="SendBulkEmail" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Email Type</label>
                        <select name="emailType" class="form-select" required>
                            <option value="">Select Email Type</option>
                            <option value="rejection">Rejection Email</option>
                            <option value="shortlist">Shortlist Email</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Custom Message (Optional)</label>
                        <textarea name="customMessage" class="form-control" rows="3" placeholder="Add any additional message..."></textarea>
                    </div>
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-1"></i>
                        <strong>Note:</strong> This will send emails to all selected applications and update their status accordingly.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Send Bulk Emails</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Select All functionality
    const selectAllCheckbox = document.getElementById('selectAll');
    const applicationCheckboxes = document.querySelectorAll('.application-checkbox');
    
    selectAllCheckbox.addEventListener('change', function() {
        applicationCheckboxes.forEach(checkbox => {
            checkbox.checked = this.checked;
        });
    });
    
    // Update select all when individual checkboxes change
    applicationCheckboxes.forEach(checkbox => {
        checkbox.addEventListener('change', function() {
            const checkedCount = document.querySelectorAll('.application-checkbox:checked').length;
            selectAllCheckbox.checked = checkedCount === applicationCheckboxes.length;
            selectAllCheckbox.indeterminate = checkedCount > 0 && checkedCount < applicationCheckboxes.length;
        });
    });
});
</script>
