@model IEnumerable<JobPosting>

@{
    ViewData["Title"] = "Manage Jobs";
}

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="display-5 mb-4">Manage Job Postings</h1>
            </div>
        </div>
        
        @if (Model.Any())
        {
            <div class="row">
                @foreach (var job in Model)
                {
                    <div class="col-lg-6 mb-4">
                        <div class="card job-card card-hover h-100 border-0 shadow-sm">
                            <div class="card-body p-4">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <h5 class="card-title text-primary">@job.Title</h5>
                                    <div>
                                        @if (job.Status == "Pending")
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="fas fa-clock me-1"></i>Pending Approval
                                            </span>
                                        }
                                        else if (job.Status == "Approved" && job.IsActive)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check me-1"></i>Active
                                            </span>
                                        }
                                        else if (job.Status == "Rejected")
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times me-1"></i>Rejected
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-pause me-1"></i>Inactive
                                            </span>
                                        }
                                    </div>
                                </div>
                                
                                <div class="mb-3">
                                    <p class="text-muted mb-1">
                                        <i class="fas fa-building me-2"></i>@job.Company
                                    </p>
                                    <p class="text-muted mb-1">
                                        <i class="fas fa-map-marker-alt me-2"></i>@job.Location
                                    </p>
                                    <p class="text-muted mb-1">
                                        <i class="fas fa-user me-2"></i>Posted by @job.Employer.FirstName @job.Employer.LastName
                                    </p>
                                </div>
                                
                                <p class="card-text text-muted">
                                    @(job.Description.Length > 100 ? job.Description.Substring(0, 100) + "..." : job.Description)
                                </p>
                                
                                <div class="row mb-3">
                                    <div class="col-6">
                                        <small class="text-muted">
                                            <i class="fas fa-clock me-1"></i>
                                            Posted @job.PostedDate.ToString("MMM dd, yyyy")
                                        </small>
                                    </div>
                                    <div class="col-6 text-end">
                                        <small class="text-muted">
                                            <i class="fas fa-users me-1"></i>
                                            @job.Applications.Count applications
                                        </small>
                                    </div>
                                </div>
                                
                                <div class="d-flex flex-column gap-2">
                                    <!-- View Details Button -->
                                    <a href="@Url.Action("Details", "Jobs", new { id = job.Id })" class="btn btn-outline-primary btn-sm w-100">
                                        <i class="fas fa-eye me-2"></i>View Details
                                    </a>
                                    
                                    <!-- Action Buttons based on Status -->
                                    @if (job.Status == "Pending")
                                    {
                                        <div class="d-flex gap-2">
                                            <form asp-action="ApproveJob" method="post" class="flex-fill">
                                                <input type="hidden" name="id" value="@job.Id" />
                                                <button type="submit" class="btn btn-success btn-sm w-100" onclick="return confirm('Are you sure you want to approve this job?')">
                                                    <i class="fas fa-check me-1"></i>Approve
                                                </button>
                                            </form>
                                            <form asp-action="RejectJob" method="post" class="flex-fill">
                                                <input type="hidden" name="id" value="@job.Id" />
                                                <button type="submit" class="btn btn-danger btn-sm w-100" onclick="return confirm('Are you sure you want to reject this job?')">
                                                    <i class="fas fa-times me-1"></i>Reject
                                                </button>
                                            </form>
                                        </div>
                                    }
                                    else if (job.Status == "Approved")
                                    {
                                        <form asp-action="ToggleJobStatus" method="post">
                                            <input type="hidden" name="id" value="@job.Id" />
                                            <button type="submit" class="btn btn-warning btn-sm w-100" onclick="return confirm('Are you sure you want to deactivate this job?')">
                                                <i class="fas fa-pause me-1"></i>Deactivate Job
                                            </button>
                                        </form>
                                    }
                                    else if (job.Status == "Rejected")
                                    {
                                        <div class="text-center">
                                            <span class="badge bg-danger">Job Rejected</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-briefcase text-muted" style="font-size: 4rem;"></i>
                <h4 class="text-muted mt-3">No job postings found</h4>
            </div>
        }
    </div>
</section>
