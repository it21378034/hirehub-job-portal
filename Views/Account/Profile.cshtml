@model ApplicationUser

@{
    ViewData["Title"] = "Profile";
}

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card shadow">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <h2 class="fw-bold">My Profile</h2>
                            <p class="text-muted">Manage your account information</p>
                        </div>
                        
                        <form asp-action="Profile" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-outline mb-4">
                                        <input asp-for="FirstName" class="form-control" />
                                        <label asp-for="FirstName" class="form-label"></label>
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-outline mb-4">
                                        <input asp-for="LastName" class="form-control" />
                                        <label asp-for="LastName" class="form-label"></label>
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="form-outline mb-4">
                                <input asp-for="Email" class="form-control" readonly />
                                <label asp-for="Email" class="form-label"></label>
                                <small class="form-text text-muted">Email cannot be changed</small>
                            </div>
                            
                            <div class="form-outline mb-4">
                                <input asp-for="PhoneNumber" class="form-control" />
                                <label asp-for="PhoneNumber" class="form-label"></label>
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-outline mb-4">
                                        <input asp-for="CreatedAt" class="form-control" readonly />
                                        <label asp-for="CreatedAt" class="form-label">Member Since</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-outline mb-4">
                                        <input asp-for="LastLoginAt" class="form-control" readonly />
                                        <label asp-for="LastLoginAt" class="form-label">Last Login</label>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="d-flex justify-content-between">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>Update Profile
                                </button>
                                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Back to Home
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
