@model JobApplication

@{
    ViewData["Title"] = "Application Details";
}

<section class="py-5">
    <div class="container">
        <!-- Error Message -->
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                <div class="d-flex align-items-center">
                    <i class="fas fa-exclamation-triangle fa-2x me-3 text-danger"></i>
                    <div class="flex-grow-1">
                        <h6 class="alert-heading mb-1">Error</h6>
                        <p class="mb-0">@TempData["ErrorMessage"]</p>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="display-5 mb-0">Application Details</h1>
                    <a href="@Url.Action("Applications")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Back to Applications
                    </a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Applicant Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Name</label>
                                    <p class="mb-0">@Model.JobSeeker.FirstName @Model.JobSeeker.LastName</p>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Email</label>
                                    <p class="mb-0">@Model.JobSeeker.Email</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Applied Date</label>
                                    <p class="mb-0">@Model.AppliedDate.ToString("MMM dd, yyyy 'at' h:mm tt")</p>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Current Status</label>
                                    <p class="mb-0">
                                        @switch (Model.Status)
                                        {
                                            case "Pending":
                                                <span class="badge bg-warning">@Model.Status</span>
                                                break;
                                            case "Shortlisted":
                                                <span class="badge bg-success">@Model.Status</span>
                                                break;
                                            case "Rejected":
                                                <span class="badge bg-danger">@Model.Status</span>
                                                break;
                                            case "Hired":
                                                <span class="badge bg-primary">@Model.Status</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@Model.Status</span>
                                                break;
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Job Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Position</label>
                                    <p class="mb-0">@Model.JobPosting.Title</p>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Company</label>
                                    <p class="mb-0">@Model.JobPosting.Company</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Location</label>
                                    <p class="mb-0">@Model.JobPosting.Location</p>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Job Type</label>
                                    <p class="mb-0">@Model.JobPosting.JobType</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.CoverLetter))
                {
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Cover Letter</h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-0">@Model.CoverLetter</p>
                        </div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Your Notes</h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-0">@Model.Notes</p>
                        </div>
                    </div>
                }
            </div>

            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            @if (!string.IsNullOrEmpty(Model.ResumePath))
                            {
                                <div class="d-grid gap-2">
                                    <a href="@Url.Action("ViewResume", new { id = Model.Id })" target="_blank" 
                                       class="btn btn-primary">
                                        <i class="fas fa-eye me-1"></i>View Resume
                                    </a>
                                    <a href="@Url.Action("DownloadResume", new { id = Model.Id })" 
                                       class="btn btn-outline-success">
                                        <i class="fas fa-download me-1"></i>Download Resume
                                    </a>
                                </div>
                                <small class="text-muted d-block mt-2">
                                    <i class="fas fa-file-pdf me-1"></i>Resume available for viewing and download
                                </small>
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-1"></i>
                                    <strong>No Resume Uploaded</strong><br>
                                    <small>This applicant chose not to upload a resume with their application. You can still review their cover letter and other application details.</small>
                                </div>
                            }
                        </div>

                        <form asp-action="UpdateApplicationStatus" method="post" class="mb-3">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <div class="mb-3">
                                <label class="form-label fw-bold">Update Status</label>
                                <select name="status" class="form-select" required>
                                    @if (Model.Status == "Pending")
                                    {
                                        <option value="Pending" selected>Pending</option>
                                    }
                                    else
                                    {
                                        <option value="Pending">Pending</option>
                                    }
                                    
                                    @if (Model.Status == "Shortlisted")
                                    {
                                        <option value="Shortlisted" selected>Shortlisted</option>
                                    }
                                    else
                                    {
                                        <option value="Shortlisted">Shortlisted</option>
                                    }
                                    
                                    @if (Model.Status == "Rejected")
                                    {
                                        <option value="Rejected" selected>Rejected</option>
                                    }
                                    else
                                    {
                                        <option value="Rejected">Rejected</option>
                                    }
                                    
                                    @if (Model.Status == "Hired")
                                    {
                                        <option value="Hired" selected>Hired</option>
                                    }
                                    else
                                    {
                                        <option value="Hired">Hired</option>
                                    }
                                </select>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Notes (Optional)</label>
                                <textarea name="notes" class="form-control" rows="3" placeholder="Add any notes about this application...">@Model.Notes</textarea>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-save me-1"></i>Update Status
                            </button>
                        </form>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-1"></i>
                            <small>
                                <strong>Email Notifications:</strong><br>
                                • Shortlisting will notify the candidate<br>
                                • Rejection will notify the candidate<br>
                                • Status changes are sent automatically
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
