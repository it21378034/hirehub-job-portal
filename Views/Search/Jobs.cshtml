@model IEnumerable<JobPosting>

@{
    ViewData["Title"] = "Advanced Job Search";
}

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="display-5 mb-4">Advanced Job Search</h1>
            </div>
        </div>

        <div class="row">
            <!-- Search Filters -->
            <div class="col-lg-3">
                <div class="card shadow">
                    <div class="card-header">
                        <h5 class="mb-0">Search Filters</h5>
                    </div>
                    <div class="card-body">
                        <form method="get" action="@Url.Action("Jobs", "Search")">
                            <div class="form-outline mb-3">
                                <input type="text" name="keyword" class="form-control" value="@ViewBag.Keyword" placeholder="Job title, keywords, or company">
                                <label class="form-label">Keywords</label>
                            </div>

                            <div class="form-outline mb-3">
                                <input type="text" name="location" class="form-control" value="@ViewBag.Location" placeholder="City, state, or country">
                                <label class="form-label">Location</label>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-briefcase me-1"></i>Job Type
                                </label>
                                <select name="jobType" class="form-select enhanced-select" data-placeholder="All Job Types">
                                    <option value="">All Job Types</option>
                                    <option value="Full-time" selected="@(ViewBag.JobType == "Full-time")">Full-time</option>
                                    <option value="Part-time" selected="@(ViewBag.JobType == "Part-time")">Part-time</option>
                                    <option value="Contract" selected="@(ViewBag.JobType == "Contract")">Contract</option>
                                    <option value="Remote" selected="@(ViewBag.JobType == "Remote")">Remote</option>
                                    <option value="Internship" selected="@(ViewBag.JobType == "Internship")">Internship</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-tags me-1"></i>Category
                                </label>
                                <select name="category" class="form-select enhanced-select" data-placeholder="All Categories">
                                    <option value="">All Categories</option>
                                    @if (ViewBag.Categories != null)
                                    {
                                        @foreach (var category in ViewBag.Categories)
                                        {
                                            <option value="@category.Name" selected="@(ViewBag.Category == category.Name)">@category.Name</option>
                                        }
                                    }
                                </select>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-chart-bar me-1"></i>Experience Level
                                </label>
                                <select name="experienceLevel" class="form-select enhanced-select" data-placeholder="All Experience Levels">
                                    <option value="">All Experience Levels</option>
                                    <option value="Entry" selected="@(ViewBag.ExperienceLevel == "Entry")">Entry Level (0-2 years)</option>
                                    <option value="Mid" selected="@(ViewBag.ExperienceLevel == "Mid")">Mid Level (3-5 years)</option>
                                    <option value="Senior" selected="@(ViewBag.ExperienceLevel == "Senior")">Senior Level (6+ years)</option>
                                    <option value="Executive" selected="@(ViewBag.ExperienceLevel == "Executive")">Executive (10+ years)</option>
                                </select>
                            </div>

                            <div class="form-outline mb-3">
                                <input type="text" name="company" class="form-control" value="@ViewBag.Company" placeholder="Company name">
                                <label class="form-label">Company</label>
                            </div>

                            <div class="row">
                                <div class="col-6">
                                    <div class="form-outline mb-3">
                                        <input type="number" name="minSalary" class="form-control" value="@ViewBag.MinSalary" placeholder="Min">
                                        <label class="form-label">Min Salary</label>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-outline mb-3">
                                        <input type="number" name="maxSalary" class="form-control" value="@ViewBag.MaxSalary" placeholder="Max">
                                        <label class="form-label">Max Salary</label>
                                    </div>
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search me-2"></i>Search Jobs
                                </button>
                                <a href="@Url.Action("Jobs", "Search")" class="btn btn-outline-secondary">
                                    <i class="fas fa-refresh me-2"></i>Clear Filters
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Search Results -->
            <div class="col-lg-9">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h5>Search Results (@Model.Count() jobs found)</h5>
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-mdb-toggle="dropdown">
                            Sort by
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Most Recent</a></li>
                            <li><a class="dropdown-item" href="#">Salary: High to Low</a></li>
                            <li><a class="dropdown-item" href="#">Salary: Low to High</a></li>
                            <li><a class="dropdown-item" href="#">Company Name</a></li>
                        </ul>
                    </div>
                </div>

                @if (Model.Any())
                {
                    <div class="row">
                        @foreach (var job in Model)
                        {
                            <div class="col-12 mb-4">
                                <div class="card job-card card-hover">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-3">
                                            <div>
                                                <h5 class="card-title text-primary">@job.Title</h5>
                                                <p class="text-muted mb-1">
                                                    <i class="fas fa-building me-2"></i>@job.Company
                                                </p>
                                                <p class="text-muted mb-1">
                                                    <i class="fas fa-map-marker-alt me-2"></i>@job.Location
                                                </p>
                                            </div>
                                            <div class="text-end">
                                                <span class="badge bg-success mb-2">@job.JobType</span>
                                                @if (job.SalaryMin.HasValue && job.SalaryMax.HasValue)
                                                {
                                                    <p class="text-success fw-bold mb-0">
                                                        <i class="fas fa-dollar-sign me-1"></i>
                                                        $@job.SalaryMin.Value.ToString("N0") - $@job.SalaryMax.Value.ToString("N0")
                                                    </p>
                                                }
                                            </div>
                                        </div>

                                        <p class="card-text text-muted mb-3">
                                            @(job.Description.Length > 200 ? job.Description.Substring(0, 200) + "..." : job.Description)
                                        </p>

                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <small class="text-muted">
                                                    <i class="fas fa-briefcase me-1"></i>@job.ExperienceLevel
                                                </small>
                                            </div>
                                            <div class="col-md-6">
                                                <small class="text-muted">
                                                    <i class="fas fa-clock me-1"></i>
                                                    Posted @job.PostedDate.ToString("MMM dd, yyyy")
                                                </small>
                                            </div>
                                        </div>

                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                @if (job.Category != null)
                                                {
                                                    <span class="badge bg-info me-2">@job.Category.Name</span>
                                                }
                                                <span class="badge bg-secondary">@job.Status</span>
                                            </div>
                                            <a href="@Url.Action("Details", "Jobs", new { id = job.Id })" class="btn btn-outline-primary">
                                                View Details
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-search text-muted" style="font-size: 4rem;"></i>
                        <h4 class="text-muted mt-3">No jobs found</h4>
                        <p class="text-muted">Try adjusting your search criteria</p>
                        <a href="@Url.Action("Jobs", "Search")" class="btn btn-primary">
                            <i class="fas fa-refresh me-2"></i>Clear Filters
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
